<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RadioGroup
        android:id="@+id/radioGroup01"
        android:layout_width="352dp"
        android:layout_height="125dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ls_view">

        <RadioButton
            android:id="@+id/englishButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="English" />

        <RadioButton
            android:id="@+id/arabicButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Arabic" />
    </RadioGroup>

    <TextView
        android:id="@+id/ls_view"
        android:layout_width="352dp"
        android:layout_height="52dp"
        android:layout_marginTop="16dp"
        android:text="Select The Translation Language"
        android:textColor="#673AB7"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ps_view"
        android:layout_width="352dp"
        android:layout_height="52dp"
        android:layout_marginTop="8dp"
        android:text="Select The Process Type From Below"
        android:textColor="#673AB7"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup01" />

    <RadioGroup
        android:id="@+id/radioGroup02"
        android:layout_width="352dp"
        android:layout_height="119dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ps_view">

        <RadioButton
            android:id="@+id/vt2slButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Voice-Text to Sign Language" />

        <RadioButton
            android:id="@+id/sl2vtButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign Language to Voice-Text" />
    </RadioGroup>

    <Button
        android:id="@+id/confirm_button1"
        android:layout_width="352dp"
        android:layout_height="70dp"
        android:layout_marginBottom="212dp"
        android:text="Done"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>